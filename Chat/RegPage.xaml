<Window x:Class="Chat.RegPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="RegPage" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="login_tb" HorizontalAlignment="Center" Margin="0,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144"/>
        <Label x:Name="password_lb" Content="Password" HorizontalAlignment="Left" Margin="328,177,0,0" VerticalAlignment="Top"/>
        <Label x:Name="login_lb" Content="Login" HorizontalAlignment="Left" Margin="328,112,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="password_pb" HorizontalAlignment="Center" VerticalAlignment="Center" Width="144"/>
        <Button x:Name="registration_bt" Content="Registration" HorizontalAlignment="Left" Margin="328,240,0,0" VerticalAlignment="Top" Click="registration_bt_Click"/>
        <Button x:Name="sign_in_bt" Content="Sign in" HorizontalAlignment="Left" Margin="400,240,0,0" VerticalAlignment="Top" Width="72" Click="sign_in_bt_Click"/>
        <Label Content="Регистрация" HorizontalAlignment="Center" Margin="0,44,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="22"/>
    </Grid>
</Window>

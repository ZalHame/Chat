<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="login_tb" HorizontalAlignment="Center" Margin="0,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144"/>
        <Label x:Name="password_lb" Content="Password" HorizontalAlignment="Left" Margin="328,0,0,0" VerticalAlignment="Center"/>
        <Label x:Name="login_lb" Content="Login" HorizontalAlignment="Left" Margin="328,149,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="password_pb" HorizontalAlignment="Center" Margin="0,235,0,0" VerticalAlignment="Top" Width="144"/>
        <Button x:Name="Sign_in_bt" Content="Sign in" HorizontalAlignment="Left" Margin="328,258,0,0" VerticalAlignment="Top" Width="67" Click="Sign_in_bt_Click"/>
        <Button x:Name="sign_up_bt" Content="Sign up" HorizontalAlignment="Left" Margin="400,258,0,0" VerticalAlignment="Top" Width="72" Click="sign_up_bt_Click"/>
        <Label Content="Авторизация" HorizontalAlignment="Center" Margin="0,105,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="22"/>
    </Grid>
</Window>
